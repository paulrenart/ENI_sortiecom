{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<table>
    <thead>
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>inscrits/places</th>
            <th>Etat</th>
            <th>inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% set etats = {'1': "En cours", '2': "Terminée"} %}
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateDebut|date('Y-m-d H:i') }}</td>
                <td>{{ sortie.dateFin|date('Y-m-d H:i') }}</td>
                <td>{{ sortie.inscriptions|length }}/{{ sortie.maxInscriptions}}</td>
                <td>{{ etats[sortie.etat] }}</td>
                <td>
                    {% if sortie.id in sorties_utilisateur %}
                     X
                    {% endif %}
                </td>
                <td>{{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom }}</td>
                <td>
                    <a href="sortie/detail/{{ sortie.id }}">Afficher</a>
                    {% if sortie.id in sorties_utilisateur %}
                     - 
                    <a href="sortie/unsubscribe/{{ sortie.id }}">Se désister</a>
                    {% elseif sortie.inscriptions|length < sortie.maxInscriptions %}
                     - 
                    <a href="sortie/subscribe/{{ sortie.id }}">S'inscrire</a>
                    {% endif %}
                    {% if sortie.organisateur == app.user %}
                     - 
                    <a href="sortie/delete/{{ sortie.id }}">Annuler</a>
                     - 
                    <a href="sortie/edit/{{ sortie.id }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        
    </tbody>
</table>

<button onclick="location.href='sortie/create'" type="button">Créer une sortie</button>
{% endblock %}
